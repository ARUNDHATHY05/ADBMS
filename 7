CREATE TABLE CATEGORY(CATEGORY_ID INT PRIMARY KEY,CATEGORY_NAME VARCHAR(20),DESCRIPTION VARCHAR(50));
CREATE TABLE PRODUCT(PRODUCT_ID INT PRIMARY KEY,PRODUCT_NAME VARCHAR(20),CATEGORY_ID INT,PRICE INT,FOREIGN KEY(CATEGORY_ID) REFERENCES CATEGORY(CATEGORY_ID));
INSERT INTO CATEGORY VALUES(&CATEGORY_ID,'&CATEGORY_NAME','&DESCRIPTION',);
INSERT INTO PRODUCT VALUES(&PRODUCT_ID,'&PRODUCT_NAME',&CATEGORY_ID,&PRICE);
